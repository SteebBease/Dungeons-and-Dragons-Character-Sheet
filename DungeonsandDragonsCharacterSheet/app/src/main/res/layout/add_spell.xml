<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/custom_primary_dark">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ability"
            android:textColor="?attr/custom_icons"
            android:id="@+id/spell_ability"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Spell"
            android:textColor="?attr/custom_icons"
            android:id="@+id/spell_spell"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/custom_icons">
        <EditText
            style="@style/spell_edit_box"
            android:hint="Name"
            android:layout_weight="2"
            android:id="@+id/spell_name"/>
        <EditText
            style="@style/spell_edit_box"
            android:hint="Level"
            android:layout_weight="1"
            android:id="@+id/spell_add_level"
            android:inputType="number"/>
        <EditText
            style="@style/spell_edit_box"
            android:hint="Spell School"
            android:layout_weight="2"
            android:id="@+id/spell_school"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/custom_icons">
        <EditText
            style="@style/spell_edit_box"
            android:hint="Casting Time"
            android:layout_weight="1"
            android:id="@+id/spell_casting_time"/>
        <EditText
            style="@style/spell_edit_box"
            android:hint="Range"
            android:layout_weight="1"
            android:id="@+id/spell_range"/>
        <EditText
            style="@style/spell_edit_box"
            android:hint="Duration"
            android:layout_weight="1"
            android:id="@+id/spell_duration"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/custom_icons">
        <EditText
            style="@style/spell_edit_box"
            android:hint="Description"
            android:layout_width="fill_parent"
            android:id="@+id/spell_description"/>
    </LinearLayout>
</LinearLayout>