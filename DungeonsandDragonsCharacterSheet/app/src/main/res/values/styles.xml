    <declare-styleable name="AppTheme">
        <attr name="custom_primary" format="color"></attr>
        <attr name="custom_primary_dark" format="color"></attr>
        <attr name="custom_primary_light" format="color"></attr>
        <attr name="custom_accent" format="color"></attr>
        <attr name="custom_primary_text" format="color"></attr>
        <attr name="custom_secondary_text" format="color"></attr>
        <attr name="custom_icons" format="color"></attr>
        <attr name="custom_divider" format="color"></attr>
        <attr name="custom_white" format="color"></attr>

        <attr name="custom_title" format="reference"></attr>

    </declare-styleable>

    <style name="blue_grey_theme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="custom_primary">@color/cs1primary</item>
